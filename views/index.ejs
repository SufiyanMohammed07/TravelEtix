    <style>
      .filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 1rem;
  padding: 0.5rem 1rem;
}

.filter {
  text-align: center;
  opacity: 1;
  flex: 0 0 auto;
}

.filter .fa-solid:hover {
  opacity: 0.5;
  cursor: pointer;
}

.filter p {
  font-size: 0.8rem;
  margin-top: 0.4rem;
}

/* ✅ Tax toggle styling made consistent with filters */
.tax-toggle {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid black;
  border-radius: 9px;
  height: 4rem;
  padding: 0 1rem;
  background-color: white;
  white-space: nowrap;
}

/* ✅ Responsive behavior: everything stays in one line and scrolls horizontally */
@media (max-width: 768px) {
  .filters {
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
  }

  .filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  .filter,
  .tax-toggle {
    flex: 0 0 auto;
    min-width: 100px;
  }

  .tax-toggle {
    height: 4rem; /* keeps consistent height */
    margin-top: 0;
  }
}

